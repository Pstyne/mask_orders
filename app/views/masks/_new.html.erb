<%= form_with model: Mask.new, class: "form-group" do |f| %>
  <%= f.label :size, class: "sr-only" %>
  <%= f.select :size, Size.all.collect{|s| s.name }, {}, class: "form form-control mb-3" %>
  <%= f.label :style, class: "sr-only" %>
  <%= f.select :style, Style.all.collect{|s| s.name }, {}, class: "form form-control mb-3" %>
  <%= f.label :pattern, class: "sr-only" %>
  <%= f.select :pattern, Pattern.all.collect{|s| s.name }, {}, class: "form form-control mb-3" %>
  <%= f.submit "Submit", class: "btn btn-success form-control" %>
<% end %>